
@model MyBlogProject.Models.Model.Contact
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<div class="sub-title">
    <h2>Bana</h2> <h2 class="main-color">Yaz</h2>
    <a href="/Home/Index/"><i class="icon-home"></i></a>
</div>

<div class="col-md-12 content-page">
    <div class="col-md-12 blog-post">
        <div class="row">

          

            <div class="col-md-4 col-sm-4">
                <div class="contact-us-detail">
                    <i class="icon-envelope-open color-5"></i>
                    <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                </div>
            </div>

            <div class="col-md-5 col-sm-4">
                <div class="contact-us-detail">
                    <i class="icon-clock color-3"></i>
