@model IEnumerable<MyBlogProject.Models.Model.SocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Sosyal Medya Hesapları</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Hesap Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Instagram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Linkedin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Github)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Instagram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linkedin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Github)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SocialMediaId }, new { @class = "btn btn-warning" }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.SocialMediaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
