@model IEnumerable<MyBlogProject.Models.Model.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Bilgisi Görüntüleme Sayfası</h2>

<p>
    @Html.ActionLink("Yeni Yazar Bilgisi Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            <label><b>Yazar Resim</b></label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Gallery.MinPicURL" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.AuthorId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.AuthorId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
