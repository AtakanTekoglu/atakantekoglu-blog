@model IEnumerable<MyBlogProject.Models.Model.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable(
            {
                "language": {
                    "url":"//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
                }
            });
    });
</script>


<h2>Kategori Sayfası</h2>
<hr />


<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped table-responsive-sm" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>


</table>
